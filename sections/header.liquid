<!-- * Assign a variable to main_menu_linklist -->

{%liquid
                    if section.settings.menu.links == blank
                        assign main_menu_linklist = linklists[section.settings.menu].links
                    else
                        assign main_menu_linklist = section.settings.menu.links
                    endif
                %}


<style>
    @import url('https://fonts.googleapis.com/css2?family=Questrial&display=swap');
    .nav-test{
        background-color: {{ section.settings.nav_menu_color }};
    }

    .buttonShadow{
        filter: drop-shadow(0px 0px 0px #000);
        background-color: #F6D886;
        transition: all 250ms linear;
        border: 1px solid rgb(75 85 99);
        border-radius: 0.5em;
    }
    
    .buttonShadow:hover{
        filter: drop-shadow(5px 5px 0px #000);
        transition: all 300ms ease-in-out;
        border: 0px solid rgb(75 85 99);
        border-radius: 0.5em;
    }

    .buttonShadowALWAYS{
        filter: drop-shadow(5px 5px 0px #000);
        background-color: #F6D886;
        transition: all 150ms linear;
    }

        .buttonShadowALWAYS:hover{
            transform: scale(1.1);
            font-weight: 900;
        transition: all 300ms ease-in-out;
    }

        .searchField{
        filter: drop-shadow(5px 5px 0px #000);
    }

    .buttonShadowNoTransition{
        filter: drop-shadow(5px 5px 0px #000);
        background-color: #F6D886;
        transition: all 150ms linear;
    }

    .inputField{
        filter: drop-shadow(5px 5px 0px #000);
        border-radius: 0.5em;
        padding: 0.4em;
    }

    .defaultImage{
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }
    
</style>
<div class="relative font-hoe_Quest" x-cloak x-data="{mobileMenuOpen:false, searchBarOpen:false }">
    <div class="mx-auto">
        <div class="flex justify-between items-center px-6 py-6 md:justify-start md:space-x-10 nav-test ">

            <!-- NAV MENU -->
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              <!-- FOR SUB MENUS -->
            <nav class="hidden md:flex justify-center space-x-10 font-extrabold text-md">

                {% for link in main_menu_linklist %}
                    {% if link.links != blank %}
                        {% assign link_handle = link.handle | replace: "-", "_" %}
                        <div class="relative" x-data=" { {{ link_handle }} :false }">
                            <button x-on:click="{{ link_handle }} = ! {{ link_handle }}" class="inline-flex items-center buttonShadow  shadow p-3 rounded-xl">
                                {{ link.title }}
                                {% render "icon-dropdown" %}
                            </button>

                            <div class=" rounded-lg absolute z-10 -ml-5 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/4">
                                <div 
                                x-show="{{ link_handle }}" 
                                x-transition:enter="transition ease-out duration-300" 
                                x-transition:enter-start="opacity-0 translate-y-3" 
                                x-transition:enter-end="opacity-100 translate-y-0" 
                                x-transition:leave="transition ease-out duration-400" 
                                x-transition:leave-start="opacity-100 translate-y-0" 
                                x-transition:leave-end="opacity-0 translate-y-3" 
                                x-on:click.away="{{ link_handle }} = false" 
                                class="buttonShadowNoTransition ring-black ring-opacity-5 overflow-hidden rounded-lg">
                                    <div class="relative grid gap-6   bg-HOE_GREEN_WARM px-2 py-3 sm:gap-6 sm:p-6 divide-y-2 divide-black">
                                        {% for childlink in link.links %}
                                            <a href="{{ childlink.url }}" class="-m-3 p-3 flex items-start ">
                                                <div class="subLinkContainer">
                                                    <p class="text-gray-900 text-lg font-extrabold">
                                                        {{ childlink.title }}
                                                    </p>
                                                </div>
                                            </a>

                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>

                    {% else %}
                        <a href="{{ link.url }}" class="text-base text-gray-900">
                            {% render "button-basic", buttonText: link.title %}

                        </a>


                    {% endif %}
                {% endfor %}
            </nav>
            <!-- STORE NAME / STORE LOGO -->
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            <!-- Mobile Menu -->
            <div class="mr-2 my-2 ml-3 md:hidden ">
                <button class="  p-2 inline-flex items-center justify-center focus:outline-none" type="button" x-on:click="mobileMenuOpen = true">
                    {% render "icon-menu" %}
                </button>
            </div>
            <div class="flex justify-center lg:flex-1 truncate text-center">

                {% if section.settings.store_logo %}
                <div>
                    <a href="{{routes.root_url}}">

                        <img class="w-44 object-cover object-center" src="{{section.settings.store_logo |  img_url: 'medium'}}" alt="{{section.settings.store_logo.alt}}" loading="lazy">
                    </a>

                </div>
                    
                {% else %}
                    
                <h1 class="text-2xl font-2xl font-extrabold truncate">
                    <a href="{{ routes.root_url }}">
                        {{ shop.name }}
                    </a>
                </h1>
                {% endif %}
            </div>

            <div class="mr-2 my-2 ml-3 md:hidden">
                <button class=" p-2 inline-flex items-center justify-center focus:outline-none" type="button">
                    <a href="{{ routes.cart_url }}" class="whitespace-nowrap text-base text-gray-500">

                        {% render "icon-shopping-bag" %}
                    </a>
                </button>
            </div>


            <!-- CART BUTTON / ACCOUNT LINKS IF ENABLED -->
            <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
                <button class="whitespace-nowrap text-base text-gray-900 ease-in-out duration-300" type="button" x-on:click="searchBarOpen = !searchBarOpen ">
                    {% render "icon-search" %}
                </button>
                <a href="{{ routes.cart_url }}" class="whitespace-nowrap text-base text-gray-900 ">

                    {% render "icon-shopping-bag" %}
                </a>

                {% if shop.customer_accounts_enabled %}
                    {% if customer %}
                        <a href="{{ routes.account_url }}" class="">Account</a>

                        {{ "Log out" | customer_logout_link | replace: '<a', '<a class="text-base text-gray-600 hover:text-gray-900" ' }}

                        {%else%}
                        <button class="buttonShadow shadow-lg bg-green-400 px-4 py-2 rounded-lg">
                            {{ "Log in" | customer_login_link | replace: '<a', '<a class="text-base text-gray-600 hover:text-gray-900 whitespace-nowrap"' }}
                        </button>

                        <button class="buttonShadow shadow-lg bg-orange-400 px-4 py-2 rounded-lg">
                            {{ "Register" | customer_register_link | replace: '<a', '<a class="text-base text-gray-600 hover:text-gray-900 whitespace-nowrap"' }}
                        </button>

                    {% endif %}
                {% endif %}
            </div>

            <!-- MOBILE MENU CONTAINER -->
            <div class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden" x-show="mobileMenuOpen">

                <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
                    <div class="p-5 divide-y-2 divide-gray-50">
                        <!-- MOBILE HEADER -->
                        <div class="flex items-center justify between pb-3">
                            <div class="">
                                <h1 class="text-lg text-gray-500">
                                    {{ section.settings.mobile_menu_title }}
                                </h1>
                            </div>

                            <div class="-mr-2">
                                <button class=" rounded-md p-2 text-gray-500  " type="button" x-on:click="mobileMenuOpen = false">
                                    {% render "icon-close" %}
                                </button>
                            </div>
                        </div>
                        <!-- MOBILE ITEMS -->
                        <div class="pt-3">
                            <nav class="grid gap-y-7">
                                {% for link in section.settings.menu.links %}
                                    {% if link.links != blank %}
                                        {% assign mobile_link_handle = link.handle | replace: "-", "_" %}
                                        <div class="relative" x-data="{ {{ mobile_link_handle }}:false }">
                                            <button x-on:click="{{  mobile_link_handle  }} = ! {{mobile_link_handle}}" class="text-base text-gray-500 hover:text-gray-900 flex items center justify-between w-full">
                                                <div>{{ link.title }}</div>
                                                {% render "icon-dropdown" %}
                                            </button>

                                            <div x-show="{{ mobile_link_handle }}" class="grid gap-y-7 py-3 items-center">
                                                {% for childlink in link.links %}
                                                    <a href="{{ childlink.url }}" class="-m-3 pt-3 mt-2 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                                                        <span class="ml-6">
                                                            {{ childlink.title }}
                                                        </span>
                                                    </a>

                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% else %}

                                        <a href="{{ link.url }}">{{ link.title }}</a>
                                    {% endif %}

                                {% endfor %}
                            </nav>

                            <h1></h1>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- SEARCH -->

    <div class="w-full bg-HOE_MAIN_LIGHT border" x-show="searchBarOpen" x-transition>
        <div class="flex justify-end">


        </div>
        <div class="h-20 flex rounded-lg justify-center items-center">
            <form action="{{ routes.search_url }}" method="get" class="flex-auto">
                <div class="relative text-gray-500 px-10 searchField">
                    <input class="border w-full bg-white h-10 px-5 pr-10 rounded-full text-sm focus:outline-none" name="q" placeholder="Search" type="search"/>
                    <button class="absolute right-0 top-0 mt-2 mr-2 md:mr-20" type="submit">
                        {% render "icon-search" %}
                    </button>
                </div>
            </form>
            <button class="text-black mr-6" type="button" x-on:click="searchBarOpen = false">
                {% render "icon-close" %}
            </button>
        </div>
    </div>

</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "color",
      "id": "nav_menu_color",
      "label": "Nav Menu Color",
      "default": "#CEADDF"
    },
    {
      "type": "color",
      "id": "nav_item",
      "label": "Nav Item Color",
      "default": "#CEADDF"
    },
    {
      "type": "text",
      "id": "mobile_menu_title",
      "default": "Menu",
      "label": "Mobile Menu Title"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Heading Nav Menu"
    },
    {
        "type":"image_picker",
        "id":"store_logo",
        "label":"Store Logo"
    }
  ]
}
{% endschema %}
