<div x-data="{loginForm: true, pwRecoverForm:false}" class="h-full flex items-center justify-center py-12 px-4 md:px-4 lg:px-8">
    <div x-show="loginForm" class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-3xl font-bold my-6">Sign into Account</h1>
        </div>
        <div class="max-w-md w-full space-y-8">
            {%form "customer_login"%}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">
                            ðŸš¨ Oops! Fix the following issues: ðŸš¨
                        </strong>
                        <p class="block sm:inline">
                            {{form.errors|default_errors}}
                        </p>

                    </div>
                    
                {% endif %}
            <div class="my-2">
                <label class="sr-only" for="email_address">Email Address</label>
                <input type="email" name="customer[email]" id="email_address"
                autocomplete="email" class=" rounded-lg relative block w-full px-3 py-2 border"
                placeholder="username@email.com"
            >
            </div>

            {% if form.password_needed %}
                <div class="my-2">
                <label class="sr-only" for="password">Password</label>
                <input type="password" name="customer[password]" id="password"
                autocomplete="current-password" class=" rounded-lg relative block w-full px-3 py-2 border"
                placeholder="********"
            >
            </div>
            {% endif %}

            <div class="my-2 text-sm">
                <a x-on:click="loginForm = !loginForm; pwRecoverForm = !pwRecoverForm" href="#" class="underline text-gray-500 hover:text-gray-900">
                    Forgot password?
                </a>
            </div>

            <div>
                <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">
                    Sign In
                </button>
            </div>
            {%endform%}
        </div>

        {% if shop.checkout.guest_login %}
            <hr class="my-12"> 

            <div>
                <h1 class="mt-6 text-center text-3xl font-bold">
                    Continue as a guest
                </h1>
            </div>

            {%form "guest_login"%}
                <div>
                    <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">
                        Continue
                    </button>
            {%endform%}
            
        {% endif %}
    </div>
    <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">
            <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-3xl font-bold my-6">Recover your Password</h1>
        </div>
        <div class="max-w-md w-full space-y-8">
            {%form "recover_customer_password"%}

            {% if form.errors %}
            <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                <strong class="font-bold">
                    Oops! Fix the following issues:
                </strong>
                <p class="block sm:inline">
                    {{form.errors|default_errors}}
                </p>

            </div>
                
            {% endif %}
            <div class="my-2">
                <label class="sr-only" for="email_address">Email Address</label>
                <input type="email" name="email" id="email"
                autocomplete="email" class=" rounded-lg relative block w-full px-3 py-2 border"
                placeholder="username@email.com"
            >
            </div>
            <div>
                <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">
                    Recover Password
                </button>
            </div>
            <div class="mt-4 text-sm">
                <a x-on:click="loginForm = !loginForm; pwRecoverForm = !pwRecoverForm" href="#" class="underline text-gray-500 hover:text-gray-900">
                    Already have an account? Back to Login
                </a>
            </div>
            {%endform%}
        </div>
    </div>
</div>