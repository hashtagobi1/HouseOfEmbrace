{%liquid
if section.settings.footer_menu.links == blank
assign footer_menu__link_list = linklists[section.settings.footer_menu].links

else
assign footer_menu__link_list = section.settings.footer_menu.links
endif
%}

<style>
    .footer {
        background-color: {{section.settings.background_color}};
        }
</style>

<!-- main container -->
<div class="footer md:mx-8 flex flex-col rounded-t-xl p-4 border-2 border-black ">



    <!-- links container -->
    <div class="flex justify-between items-center flex-row ">
        <!-- socials -->
        <div class="flex flex-col mt-5 pb-5" id="socials">
          <!-- socials -->
          <a href="{{section.settings.instagram_link}}" target="_blank" class="rounded-full  p-1 mr-4">
            {%render "instagram" %}
          </a>
          <a href="{{section.settings.twitter_link}}" target="_blank" class="rounded-full  p-1 mr-4">
            {%render "twitter" %}
          </a>
          <a href="{{section.settings.tiktok_link}}" target="_blank" class="rounded-full  p-1 mr-4">
            {%render "tiktok" %}
          </a>
          <a href="{{section.settings.facebook_link}}" target="_blank" class="rounded-full  p-1 mr-4">
            {%render "facebook" %}
          </a>
          <a href="mailto:{{section.settings.email_link}}" class="rounded-full  p-1 mr-4">
            {%render "email" %}
          </a>
        </div>
        <!-- privacy, FAQ, etc. -->
        <div class="text-right">

                {% for link in footer_menu__link_list %}
                <a href="{{ link.url }}" class="">
                    <p class="mt-5 font-bold uppercase">{{ link.title }}</pc>
                </a>
                {% endfor %}
        </div>
    </div>
    <!-- credits -->
    <div class="flex justify-center items-center w-full pt-4">
        <p class="font-bold pt-4">
           &copy;	 {{ section.settings.footer_text }}
        </p>
    </div>

</div>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#CEADDF"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Anna Marie-Descartes"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu"
    },
    {
    "type":"url",
    "id":"instagram_link",
    "label":"Instagram"
    },
    {
    "type":"url",
    "id":"tiktok_link",
    "label":"TikTok"
    },
    {
    "type":"url",
    "id":"twitter_link",
    "label":"Twitter"
    },
    {
    "type":"url",
    "id":"facebook_link",
    "label":"Facebook"
    },
    {
    "type":"text",
    "id":"email_link",
    "label":"House of Embrace Enquiry Email:",
    "default":"info@houseofembrace.com:"
      }
  ]
}
{% endschema %}