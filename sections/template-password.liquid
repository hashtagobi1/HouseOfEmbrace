{% schema %}
{
    "name":"Password",
    "settings":[
    {
        "type":"text",
        "id":"heading",
        "label":"Heading",
        "default":"Get ready for a new culture of confidence"
    },
    {
        "type":"text",
        "id":"subtext",
        "label":"Subtext",
        "default":"returning soon"
    },
    {
        "type":"text",
        "id":"companyMission",
        "label":"Company Mission",
        "default":"we curate articles, products, and interviews with the sole mission of helping you become a better woman. sign up to learn more."
    },
    {
        "type":"text",
        "id":"sign_up_button",
        "label":"Sign Up Text",
        "default":"join the journey"
    },
    {
        "type":"image_picker",
        "id":"logo",
        "label":"Logo"
    },
    {
    "type":"url",
    "id":"instagram_link",
    "label":"Instagram"
    },
    {
    "type":"url",
    "id":"tiktok_link",
    "label":"TikTok"
    },
    {
    "type":"url",
    "id":"twitter_link",
    "label":"Twitter"
    },
    {
    "type":"url",
    "id":"facebook_link",
    "label":"Facebook"
    },
    {
    "type":"text",
    "id":"email_link",
    "label":"House of Embrace Enquiry Email:",
    "default":"info@houseofembrace.com:"
    }    ]
}
{% endschema %}

