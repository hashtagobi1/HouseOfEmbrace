<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="mt-6 text-center text-3xl font-bold text-gray-700">Activate Account</h1>
            <p class="text-center mt-4">Create Password to activate</p>
        </div>

        <div>
            {%form "activate_customer_password", class: "space-y-4", id: "activate_account_form"%}
            {% if form.errors %}
                <div role="alert" class="relative border border-red-700 bg-red-100 text-red-700 px-4 py-3">
                    <strong class="font-bold">Error!</strong>

                    <span class="block sm:inline">
                        {{form.errors|default_errors}}
                    </span>
                </div>
                
            {% endif %}
            <div>
                <label for="password">Password</label>
                <input 
                class="relative block w-full px-3 py-2 border rounded-lg placeholder-gray-300 text-gray-700"
                autocomplete="new-password" type="password" id="password" 
                placeholder="New Password" name="customer[password]">
            </div>

            <div>
                <label for="password_confirmation">Password Confirmation</label>
                <input 
                class="relative block w-full px-3 py-2 border rounded-lg placeholder-gray-300 text-gray-700"
                type="password" 
                id="password_confirmation" 
                placeholder="Password Confirmation" name="customer[password_confirmation]">
            </div>

            <div class="class md:flex block">
                <button 
                type="submit"
                class="w-full border py-2 px-4 text-sm font-medium text-white bg-gray-700 hover:bg-gray-900">
                Activate Account
                </button>
                <button 
                name="decline"
                type="submit"
                class="w-full border py-2 px-4 text-sm font-medium text-white bg-gray-700 hover:bg-gray-900 hover:text-white">
                Decline Invite
                </button>
        </div>

            {%endform%}
        </div>
    </div>
</div>