<style>
    .basicShadow {
        -webkit-box-shadow: 5px 5px 0px 0px rgba(0, 0, 0, 0.75);
        -moz-box-shadow: 5px 5px 0px 0px rgba(0, 0, 0, 0.75);
        box-shadow: 5px 5px 0px 0px rgba(0, 0, 0, 0.75);
    }
</style>
<div class="w-full py-6 rounded-lg basicShadow px-3">
    <div class="rounded-lg overflow-hidden">

        <a href="{{article.url}}" class="">
            <div class="h-80 overflow-hidden transition duration-500 ease-in-out hover:scale-105">
                {% if article.image %}
                <img class="w-full h-full object-cover rounded-sm" src="{{article.image | img_url:" medium"}}"
                    alt="{{article.image.alt}}" />
                {%else%}
                {{"product-3" | placeholder_svg_tag: "w-full h-full object-cover bg-gray-50"}}
                {% endif %}
            </div>
        </a>
        <div class="flex flex-col p-4">
            <a href="{{article.url}}">
                <h1 class="text-3xl font-extrabold">
                    {{article.title | upcase}}
                </h1>
            </a>
            <span class="text-sm text-black opacity-60">{{article.author}}</span>
            <div class="mt-2">
                <p>
                    {% if article.excerpt != blank %}
                    {{article.excerpt}}
                    {% else %}
                    {{article.content | truncatewords:25}}
                    {% endif %}
                </p>
            </div>
        </div>

    </div>
</div>