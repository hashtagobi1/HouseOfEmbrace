{% if pagination.pages > 0 %}
    <nav class="flex justify-center my-8" role="navigation">
        {% if pagination.previous %}
            <a class="border border-gray-600 hover:bg-gray-900 hover:text-white px-8 py-3 mx-1 rounded-md font-medium" href="{{pagination.previous.url}}">{{pagination.previous.title}}</a>
        {% endif %}

        {% for part in pagination.parts %}
            {% if part.is_link %}
                <a class="border border-gray-600 hover:bg-gray-900 hover:text-white px-8 py-3 mx-1 rounded-md font-medium" href="{{part.url}}">{{part.title}}</a>
                {%else%}
                <span class="border border-gray-600 bg-gray-900 text-white px-8 py-3 mx-1 rounded-md font-medium">
                    {{part.title}}</span>
            {% endif %}
        {% endfor %}

        {% if pagination.next %}
            <a class="border border-gray-600 hover:bg-gray-900 hover:text-white px-8 py-3 mx-1 rounded-md font-medium href=" {{pagination.next.url}} ">{{pagination.next.title}}</a>
        {% endif %}


    </nav>

{% endif %}