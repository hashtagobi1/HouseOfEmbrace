<div class="w-full py-6 px-3">
    <div class=" rounded-xl rounded-t-full 
    = overflow-hidden hover:scale-90 duration-300">
        <a href="{{product.url}}" class="">
            <div class="h-80 overflow-hidden transition duration-500 ease-in-out hover:scale-105">
                {% if product.featured_image %}
                <img class="w-full h-full object-cover" src="{{product.featured_image | img_url:"master" }}"
                    alt="{{product.featured_image.alt}}">
                {% else %}
                {{"product-3" | placeholder_svg_tag: "w-full h-full object-cover bg-gray-50"}}
                {% endif %}
            </div>
        </a>

        <div class="flex flex-col p-4 bg-white border-t-2 border-black rounded-b-2xl">
            {% if section.settings.show_vendor %}
            <span class="text-sm text-gray-500">{{product.vendor}}</span>
            {% endif %}
            <a class="font-bold uppercase  hover:underline hover:underline-offset-1"
                href="{{product.url}}">{{product.title}}</a>
            <p class="text-gray-500">{{product.price|money}}</p>
        </div>
    </div>
</div>