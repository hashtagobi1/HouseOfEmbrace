<div class="w-full py-6 px-3">
    <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
        <a href="{{product.url}}" class="">
            <div class="h-80 overflow-hidden transition duration-1000 ease-in-out hover:scale-105">
                {% if product.featured_image %}
                <img class="w-full h-full object-cover" src="{{product.featured_image | img_url:" medium" }}"
                    alt="{{product.featured_image.alt}}">
                {% else %}
                {{"product-3" | placeholder_svg_tag: "w-full h-full object-cover bg-gray-50"}}
                {% endif %}
            </div>
        </a>

        <div class="flex flex-col p-4">
            {% if section.settings.show_vendor %}
            <span class="text-sm text-gray-400">{{product.vendor}}</span>
            {% endif %}
            <a class="text-gray-700 uppercase font-medium hover:underline hover:underline-offset-1"
                href="{{product.url}}">{{product.title}}</a>
            <p class="text-gray-500">{{product.price|money}}</p>
        </div>
    </div>
</div>